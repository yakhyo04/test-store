        max-height: 100%;
    }
    .featured__product--title{
        color: var(--color-secondary-color);
        margin: 0;
    }
    .featured__product--money{
        margin: 0;
    }
    .featured__product--block{
        text-decoration: none;
        color: var(--color-midnight-color);
        text-align: center;
        height: 90%;
    }
    .featured__product--content{
